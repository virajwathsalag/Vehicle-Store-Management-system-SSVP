<UserControl x:Class="CarApp2.MVVM.View.loginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarApp2.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="588" d:DesignWidth="1280"
            Background="Transparent"
             >


    <Border CornerRadius="12" Margin="10,0,10,0">
        <Border.Background>
            <ImageBrush ImageSource="/Images/f3712c26bca08ab2f4fe36ca9d0e8af4.jpg"
                        Stretch="UniformToFill" />
        </Border.Background>


        <Border CornerRadius="10"                    
            BorderThickness="6"
            Opacity="0.79" Margin="-12,0,0,0">

            <Border.BorderBrush >
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1"  >
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="Black" Offset="0"/>

                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Ivory" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid Margin="0,0,-6,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Rectangle HorizontalAlignment="Center" Height="504" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="320" Fill="LightGray" Margin="0,9,0,0" />

                <Grid Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>



                    <Image Source="/Images/Firefly_An_new_car_brand_logo_named_SSVP_to_be_put_in_a_car._It_should_be_new_looking_.black_letter_-removebg-preview.png" RenderTransformOrigin="0.5,0.5" Margin="503,-50,453,-240"  >
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="0.895"/>
                                <RotateTransform Angle="0.915"/>
                                <TranslateTransform X="1.984"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>

                </Grid>

                <StackPanel Width="250"
                            Grid.Row="1"
                            Orientation="Vertical"
                            Margin="508,160,508,2">


                    <TextBlock Text="SSVP Prime Vehicles"
                               Foreground="Black"
                               FontSize="27"
                               FontWeight="Medium"
                               FontFamily="Montserrat" Height="44"
                               />

                    <TextBlock Text="Welcome to SSVP: redefining driving with innovation, luxury, and sustainability."
                               Foreground="Black"
                               
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,5,0,0" Height="37"/>

                    <TextBlock Text="Username"
                               Foreground="Black"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"                             
                               Margin="0,35,0,0"/>

                    <TextBox x:Name="txtUser"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="Black"
                             CaretBrush="Black"
                             BorderBrush="Black"
                             BorderThickness="0,0,0,2"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0">

                        <TextBox.Background>
                            <ImageBrush 
                               ImageSource="/Images/icons8-username-16.png" 

          
                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                    <TextBlock Text="Password"
                               Foreground="Black"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"                             
                               Margin="0,15,0,0"/>

                    <PasswordBox x:Name="txtPass"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="Black"
                             CaretBrush="Black"
                             BorderBrush="Black"
                             BorderThickness="0,0,0,2"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0">

                        <PasswordBox.Background>
                            <ImageBrush ImageSource="/Images/icons8-password-16.png" 

                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </PasswordBox.Background>
                    </PasswordBox>
                    <TextBlock x:Name="txtBerror" TextWrapping="Wrap" Text="." Height="29" Width="249" IsEnabled="False" Foreground="#FFE40909" />

                    <Button x:Name="btnLogin"                          
                            BorderThickness="4"
                            Content="LOG IN"
                            Foreground="White"
                            FontSize="14"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                           Click="btnLogin_Click_1">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#112f81"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#A52A2A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="150" Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">

                        <TextBlock Text="Haven't Registered?"
                               Foreground="Black"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"/>

                        <TextBlock Text="Register"
                               Foreground="DarkBlue"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Cursor="Hand"
                               Margin="8,0,0,0" MouseDown="TextBlock_MouseDown"/>

                    </StackPanel>








                </StackPanel>

            </Grid>
        </Border>
    </Border>



</UserControl>
