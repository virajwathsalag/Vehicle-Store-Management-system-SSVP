<UserControl x:Class="CarApp2.MVVM.View.modelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:CarApp2.MVVM.View"
             mc:Ignorable="d" d:DesignWidth="800"
             Background="Transparent" Height="662">

    <ScrollViewer>

        <Grid>

            <Border Background="White">
                <!--Header / Caption-->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="401*"/>


                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="44*"/>
                        <RowDefinition Height="1215*"/>

                    </Grid.RowDefinitions>

                    <!--caption-->
                    <StackPanel Grid.Column="0"
             Orientation="Horizontal"
             VerticalAlignment="Center" Height="20">



                        <fa:IconImage Icon="Car"
                   Height="20"
                   Width="20"
                   Foreground="{StaticResource titleColor3}"
                   Margin="35,0,10,0"/>
                        <TextBlock Text="Models"
                Foreground="{StaticResource titleColor3}"
                FontSize="16"
                FontFamily="Medium"
                VerticalAlignment="Center"/>

                    </StackPanel>

                    <Grid Grid.Row="1">

                        <Border Margin="0,253,10,10">

                            <StackPanel Margin="10,-262,0,3">

                                <Image Source="/Images/lexus-removebg-preview.png" Height="273" Width="731" />
                                <TextBlock TextWrapping="Wrap" Text="SSVP LEXUS" FontSize="50" FontFamily="Ariel" FontWeight="Bold" Height="53" Width="292"/>
                                <TextBlock TextWrapping="Wrap" Text="Embrace the experience of pure luxury" FontSize="30" FontFamily="Ariel" FontWeight="Light" Height="53" Width="495"/>

                                <Expander Header="More..." FontSize="17" Width="253" Height="137">
                                    <TextBlock TextWrapping="Wrap" Text="Engine  :The ES 300h features a 2.5-liter 4-cylinder engine paired with an electric motor." FontSize="17" Height="94"/>
                                </Expander>


                                <Image Source="/Images/pruis1-removebg-preview.png" Height="273" Width="731" Margin="0,20,0,0" />
                                <TextBlock TextWrapping="Wrap" Text="SSVP PRIUS" FontSize="50" FontFamily="Ariel" FontWeight="Bold" Height="53" Width="292"/>
                                <TextBlock TextWrapping="Wrap" Text="
Indulge in the opulence of unparalleled comfort" FontSize="30" FontFamily="Ariel" FontWeight="Light" Height="53" Width="613"/>
                                <Expander Header="More..." FontSize="17" Width="253" Height="137">
                                    <TextBlock TextWrapping="Wrap" Text="Engine  :The ES 300h features a 2.5-liter 4-cylinder engine paired with an electric motor." FontSize="17" Height="94"/>
                                </Expander>

                                <Image Source="/Images/lxus1-removebg-preview.png" Height="273" Width="731" Margin="0,30,0,0" />
                                <TextBlock TextWrapping="Wrap" Text="SSVP AQUA" FontSize="50" FontFamily="Ariel" FontWeight="Bold" Height="53" Width="292"/>
                                <TextBlock TextWrapping="Wrap" Text="Savor the elegance of exquisite craftsmanship" FontSize="30" FontFamily="Ariel" FontWeight="Light" Height="53" Width="578"/>
                                <Expander Header="More..." FontSize="17" Width="253" Height="295">
                                    <TextBlock TextWrapping="Wrap" Text="Engine  :The hybrid powertrain combines an electric motor and a 1.5-liter gasoline engine to achieve excellent fuel efficiency. With the Aqua Hybrid, you can travel an average of 35 kilometers on one liter of fuel. It is thus the best option for individuals seeking to save their fuel expenses and carbon footprint." FontSize="17" Margin="0,10,0,1" Width="253"/>
                                </Expander>

                            </StackPanel>
                        </Border>


                    </Grid>

                </Grid>




            </Border>


        </Grid>

    </ScrollViewer>

</UserControl>
