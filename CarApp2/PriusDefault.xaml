<Window x:Class="CarApp2.PriusDefault"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarApp2"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="PriusDefault" Height="662" Width="1300" WindowStyle="None" AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer>
            <Border  CornerRadius="20">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0.9,1">
                        <GradientStop Color="#bacaf5" Offset="0" />
                        <GradientStop Color="#e2e8fe" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>


                    <Image Source="/Images/pruis1-removebg-preview.png" Margin="650,-47,56,306" />



                    <StackPanel
             Grid.Row="1"
             Orientation="Vertical"
             Margin="10,0,10,2">


                        <StackPanel Grid.Column="0"
                Orientation="Horizontal" Height="39">

                            <Button Style="{StaticResource iconButton}"
    Tag="{StaticResource color3}" Height="31" Width="88" Margin="0,0,0,0" >
                                <fa:IconImage Icon="ArrowLeft" Height="21" Width="64" Cursor="Hand"   Style="{StaticResource iconButtonIcon}" MouseDown="IconImage_MouseDown" />

                            </Button>


                            <fa:IconImage Icon="Car"
                    Height="20"
                    Width="20"
                    Foreground="{StaticResource titleColor3}"
                    Margin="35,0,10,0"/>
                            <TextBlock Text="Models"
                    Foreground="{StaticResource titleColor3}"
                    FontSize="16"
                    FontFamily="Medium"
                    VerticalAlignment="Center"/>

                        </StackPanel>





                        <TextBlock Text="Username           :"
                Foreground="Black"
                FontSize="15"
                FontWeight="Medium"
                FontFamily="Montserrat"                             
                Margin="0,35,0,0"/>
                        <TextBlock 
                    x:Name="txtName" 
                    Text=" SSVP Prius"
                    Margin="0,-20,0,0"
                    Foreground="Black"
                    FontSize="20"
                    FontWeight="Medium"
                    FontFamily="Montserrat" Width="912"                             
/>



                        <TextBlock Text="Color                   :"
                Foreground="Black"
                FontSize="15"
                FontWeight="Medium"
                FontFamily="Montserrat"                             
                Margin="0,35,0,0"/>
                        <Grid Height="107">
                            <Ellipse Fill="Black" Margin="198,0,1046,67"/>
                            <RadioButton Name="rdbColour_B" Margin="193,59,530,-59"  Content="Black"/>
                            <RadioButton Name="rdbColour_W" Margin="335,57,388,10" Content="White" />
                            <Ellipse Fill="White" Margin="338,0,902,67"/>
                        </Grid>

                        <TextBlock Text="Quantity             :"
  Foreground="Black"
  FontSize="15"
  FontWeight="Medium"
  FontFamily="Montserrat"                             
  Margin="0,15,0,0"/>
                        <TextBox x:Name="txtQty"  Background="Transparent"
                      FontSize="13"
                      FontWeight="Medium"
                      FontFamily="Montserrat"                            
                      Foreground="Black"
                      CaretBrush="Black"
                      BorderBrush="Black"
                      BorderThickness="0,0,0,2"
                      Height="28"
                         Margin="0,-25,820,0"
                         MaxLength="1"
                      VerticalContentAlignment="Center"
                      Padding="20,0,0,0" Width="96"/>


                        <TextBlock Text=" Generation        :   5.1 "
                                Foreground="Black"
                                FontSize="15"
                                FontWeight="Medium"
                                FontFamily="Montserrat"                             
                                Margin="0,15,0,0" Height="30"/>

                        <TextBlock Text=" Engine Type      :   Hybrid "
                                Foreground="Black"
                                FontSize="15"
                                FontWeight="Medium"
                                FontFamily="Montserrat"                             
                                Margin="0,15,0,0" Height="32"/>
                        <TextBlock Text=" Fuel Type          :   Petrol "
                                Foreground="Black"
                                FontSize="15"
                                FontWeight="Medium"
                                FontFamily="Montserrat"                             
                                Margin="0,15,0,0" Height="24"/>
                        <TextBlock Text=" NIC                   : "
Foreground="Black"
FontSize="15"
FontWeight="Medium"
FontFamily="Montserrat"
Margin="0,15,0,0"
Height="24"/>
                        <TextBox x:Name="txtNIC"  Background="Transparent"
Margin="0,-30,800,0"
FontSize="15"
FontWeight="Medium"
FontFamily="Montserrat"                            
Foreground="Black"
CaretBrush="Black"
BorderBrush="Black"
BorderThickness="0,0,0,1"
Height="28"
MaxLength="19"
VerticalContentAlignment="Center"
Padding="20,0,0,0" Width="250" 
Text="SSVP"/>
                        <Button x:Name="btnDefaultCOnfigOk"                          
  BorderThickness="4"
  Content="View Price"
  Foreground="White"
  FontSize="14"
  FontFamily="Montserrat"
  Cursor="Hand"                           
  Height="73" Width="452" Margin="0,0,600,0" Click="btnDefaultCOnfigOk_Click_1"
>

                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="CornflowerBlue"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="DarkBlue"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Width="150" Height="40"
              CornerRadius="20"
              Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <TextBox Name="txtViewPrice" TextWrapping="Wrap" Text="" FontSize="50" Width="756" Height="75" Background="Transparent" BorderBrush="White" BorderThickness="2"/>
                        <Button x:Name="btnViewPricePriusCus_Copy"                          
    BorderThickness="4"
    Content="Next"
    Foreground="White"
    FontSize="14"
    FontFamily="Montserrat"
    Cursor="Hand"                           
    Height="137" Width="908" Click="btnViewPricePriusCus_Copy_Click">

                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="CornflowerBlue"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="DarkBlue"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Width="250" Height="50"
                CornerRadius="20"
                Background="{TemplateBinding Background}" Margin="284,-4,284,11">
                                        <ContentPresenter VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>


                    </StackPanel>
                </Grid>


            </Border>
        </ScrollViewer>

    </Grid>
</Window>
