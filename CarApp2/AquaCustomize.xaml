<Window x:Class="CarApp2.AquaCustomize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:CarApp2"
        mc:Ignorable="d"
        Title="AquaCustomize"  Height="662" Width="1300" WindowStyle="None" AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen">
    <Grid>
        <ScrollViewer>
            <Grid>

                <Grid>
                    <Border  CornerRadius="20">

                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0.9,1">
                                <GradientStop Color="#8e96e8" Offset="0" />
                                <GradientStop Color="#c5c9f3" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>


                            <Image Source="/Images/lxus1-removebg-preview.png" Margin="454,-748,10,1249" />



                            <StackPanel
             Grid.Row="1"
             Orientation="Vertical"
             Margin="10,0,10,2">


                                <StackPanel Grid.Column="0"
                Orientation="Horizontal" Height="47" Background="White" Width="1270"    >  



                                    <Button Style="{StaticResource iconButton}"
    Tag="{StaticResource color3}" Height="31" Width="88" Margin="0,0,0,0" >
                                        <fa:IconImage Icon="ArrowLeft" Height="21" Width="64" Cursor="Hand"   Style="{StaticResource iconButtonIcon}" MouseDown="IconImage_MouseDown"  />

                                    </Button>

                                    <fa:IconImage Icon="Car"
                    Height="20"
                    Width="20"
                    Foreground="{StaticResource titleColor3}"
                    Margin="35,0,10,0"/>
                                    <TextBlock Text="Customize SSVP Aqua"
                    Foreground="{StaticResource titleColor3}"
                    FontSize="16"
                    FontFamily="Medium"
                    VerticalAlignment="Center"/>

                                </StackPanel>





                                <TextBlock Text="Name                   :"
                Foreground="Black"
                FontSize="15"
                FontWeight="Medium"
                FontFamily="Montserrat"                             
                Margin="0,35,0,0"/>
                                <TextBlock 
                                    x:Name="txtName" 
                                    Text=" SSVP Aqua"
                                    Margin="0,-20,0,0"
                                    Foreground="Black"
                                    FontSize="25"
                                    FontWeight="Medium"
                                    FontFamily="Montserrat" Width="912"                             
                />


                                <TextBlock Text="Colour                   :"
                Foreground="Black"
                FontSize="15"
                FontWeight="Medium"
                FontFamily="Montserrat"                             
                Margin="0,35,0,0"/>
                                <Grid Height="107">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="16*"/>
                                        <ColumnDefinition Width="405*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Fill="Black" Margin="94,0,1085,67" Grid.Column="1"/>
                                    <RadioButton Name="rdbColour_B" Margin="94,59,581,-59"  Content="Black"  Grid.Column="1"/>
                                    <RadioButton Name="rdbColour_W" Margin="158,59,517,8" Content="White" Grid.Column="1" />
                                    <Ellipse Fill="White" Margin="158,0,1024,67" Grid.Column="1" RenderTransformOrigin="-1.798,0.642" />
                                    <Ellipse Fill="Red" Margin="222,0,957,67" Grid.Column="1" RenderTransformOrigin="6.389,0.575"/>
                                    <RadioButton Name="rdbColour_R" Margin="222,59,453,-59"  Content="Red"  Grid.Column="1"/>
                                    <RadioButton Name="rdbColour_Bu" Margin="287,59,388,8" Content="Blue" Grid.Column="1"  />
                                    <Ellipse Fill="Blue" Margin="287,0,895,67" Grid.Column="1" />
                                    <RadioButton Name="rdbColour_G" Margin="360,59,315,8" Content="Gray" Grid.Column="1" />
                                    <Ellipse Fill="Gray" Margin="360,0,822,67" Grid.Column="1" RenderTransformOrigin="-1.04,0.442" />


                                </Grid>

                                <TextBlock Text="Quantity             :"
  Foreground="Black"
  FontSize="15"
  FontWeight="Medium"
  FontFamily="Montserrat"                             
  Margin="0,15,0,0"/>
                                <TextBox x:Name="txtQty"  Background="Transparent"
                      FontSize="13"
                      FontWeight="Medium"
                      FontFamily="Montserrat"                            
                      Foreground="Black"
                      CaretBrush="Black"
                      BorderBrush="Black"
                      BorderThickness="0,0,0,2"
                      Height="28"
                         Margin="0,-20,820,0"
                         MaxLength="1"
                      VerticalContentAlignment="Center"
                      Padding="20,0,0,0" Width="96"/>


                                <TextBlock Text="Seat Material     :"
                Foreground="Black"
                FontSize="15"
                FontWeight="Medium"
                FontFamily="Montserrat"                             
                Margin="0,35,0,0"/>
                                <Grid Height="258">
                                    <Image Source="/Images/leather.jpeg" Margin="134,-44,970,53" />

                                    <RadioButton Name="rdbLether" Margin="193,140,970,73"  Content="Leather"/>
                                    <RadioButton Name="rdbNylon" Margin="380,143,771,73" Content="Nylon" />
                                    <Image Source="/Images/nylon.jpg" Margin="335,-47,771,47" />

                                </Grid>

                                <TextBlock Text="DashBoard Style :"
Foreground="Black"
FontSize="15"
FontWeight="Medium"
FontFamily="Montserrat"                             
Margin="0,35,0,0"/>
                                <Grid Height="413">
                                    <Image Source="/Images/Analog.jpg" Margin="59,0,759,94" />



                                    <RadioButton Name="rdbAnalog" Margin="222,284,922,70"  Content="Analog"/>
                                    <RadioButton Name="rdbDigital" Margin="808,284,323,99" Content="Digital" />
                                    <Image Source="/Images/digital.jpg" Margin="623,58,139,146" />

                                </Grid>
                                <TextBlock Text="stearing Wheel Typw :"
Foreground="Black"
FontSize="15"
FontWeight="Medium"
FontFamily="Montserrat"                             
Margin="0,35,0,0"/>
                                <Grid Height="413">
                                    <Image Source="/Images/halfSteer.png" Margin="0,0,860,94" />

                                    <RadioButton x:Name="rdbSquare" Margin="193,296,951,58"  Content="Half Wheel"/>
                                    <RadioButton x:Name="rdbCircle" Margin="640,296,491,87" Content="Standard Wheel" />
                                    <Image Source="/Images/fullSteer.png" Margin="444,10,381,146" />

                                </Grid>

                                <TextBlock Text="Rim Type                   :"
Foreground="Black"
FontSize="15"
FontWeight="Medium"
FontFamily="Montserrat"                             
Margin="0,35,0,0" Height="44"/>
                                <Grid Height="397">
                                    <Image Source="/Images/rim1-removebg-preview.png" Margin="0,0,977,197" />
                                    <Image Source="/Images/rim2-removebg-preview.png" Margin="358,0,704,197" />
                                    <Image Source="/Images/rim3-removebg-preview.png" Margin="680,0,327,197" />





                                    <RadioButton Name="rdbRim_S" Margin="119,222,1041,144"  Content="Rim Type 1"/>
                                    <RadioButton Name="rdbRim_M" Margin="433,222,732,144" Content="Rim Type 2" />
                                    <RadioButton Name="rdbRim_L" Margin="785,222,384,144" Content="Rim Type 3" />

                                </Grid>
                                <TextBlock Text="Door Type                   :"
Foreground="Black"
FontSize="15"
FontWeight="Medium"
FontFamily="Montserrat"                             
Margin="0,35,0,0" Height="44"/>
                                <Grid Height="397">

                                    <Image Source="/Images/butterflydoor.png" Margin="0,0,862,168" />
                                    <Image Source="/Images/Lexus-LC-with-Doors-Open-removebg-preview.png" Margin="400,-12,400,155" />


                                    <RadioButton Name="rdbDoor_B" Margin="150,229,985,137"  Content="Butterfly Doors"/>
                                    <RadioButton Name="rdbDoor_S" Margin="640,233,516,133" Content="Side Doors" />

                                </Grid>
                                <TextBlock Text=" Generation        :   5.1 "
                                Foreground="Black"
                                FontSize="15"
                                FontWeight="Medium"
                                FontFamily="Montserrat"                             
                                Height="30"/>

                                <TextBlock Text=" Engine Type      :   Hybrid "
                                Foreground="Black"
                                FontSize="15"
                                FontWeight="Medium"
                                FontFamily="Montserrat"                             
                                Margin="0,15,0,0" Height="32"/>
                                <TextBlock Text=" Fuel Type          :   Petrol "
                                Foreground="Black"
                                FontSize="15"
                                FontWeight="Medium"
                                FontFamily="Montserrat"                             
                                Margin="0,15,0,0" Height="24"/>
                                <TextBlock Text=" NIC                   : "
                                    Foreground="Black"
                                    FontSize="15"
                                    FontWeight="Medium"
                                    FontFamily="Montserrat"
                                    Margin="0,15,0,0"
                                    Height="24"/>
                                <TextBox x:Name="txtNIC"  Background="Transparent"
                                    Margin="0,-30,800,0"
                                    FontSize="15"
                                    FontWeight="Medium"
                                    FontFamily="Montserrat"                            
                                    Foreground="Black"
                                    CaretBrush="Black"
                                    BorderBrush="Black"
                                    BorderThickness="0,0,0,1"
                                    Height="28"
                                    MaxLength="19"
                                    VerticalContentAlignment="Center"
                                    Padding="20,0,0,0" Width="250" 
                                    Text="SSVP"/>

                                <Button x:Name="btnViewPricePriusCus"                          
  BorderThickness="4"
  Content="View Price"
  Foreground="White"
  FontSize="14"
  FontFamily="Montserrat"
  Cursor="Hand"                           
  Height="92" Width="430" Margin="800,0,0,0" Click="btnViewPricePriusCus_Click_1" 
>

                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Background" Value="CornflowerBlue"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="DarkBlue"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>

                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Width="150" Height="40"
              CornerRadius="20"
              Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"
                            HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <TextBox Name="txtViewPrice" VerticalContentAlignment="Center" TextWrapping="Wrap" Text="" FontSize="50" Width="756" Height="99" Background="Transparent" BorderBrush="White" BorderThickness="2"/>
                                <Button x:Name="btnViewPriceAquaCas"                          
                                    BorderThickness="4"
                                    Content="Next"
                                    Foreground="White"
                                    FontSize="14"
                                    FontFamily="Montserrat"
                                    Cursor="Hand"                           
                                    Height="137" Width="908" Click="btnViewPriceAquaCas_Click" >

                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Background" Value="CornflowerBlue"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="DarkBlue"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>

                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Width="250" Height="50"
                                                CornerRadius="20"
                                                Background="{TemplateBinding Background}" Margin="284,-4,284,11">
                                                <ContentPresenter VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>



                            </StackPanel>
                        </Grid>


                    </Border>

                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
